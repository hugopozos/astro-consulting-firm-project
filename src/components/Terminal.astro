
<div class="coding inverse-toggle px-5 pt-4 shadow-[-1px_9px_20px_rgba(255,255,255,0.2),9px_-1px_20px_rgba(255,255,255,0.2),-8px_-7px_20px_rgba(255,255,255,0.2)]
text-gray-100 text-sm font-mono 
subpixel-antialiased bg-gray-950 pb-6 rounded-lg leading-normal overflow-hidden h-96">
    <div class="top py-4 flex">
        <div class="h-3 w-3 bg-red-500 rounded-full"></div>
        <div class="ml-2 h-3 w-3 bg-orange-300 rounded-full"></div>
        <div class="ml-2 h-3 w-3 bg-green-500 rounded-full"></div>
    </div>
    

    <div class="mt-4 text-start flex"
    >
        <span class="text-green-400">neodigital:~$</span>
        <div 
        x-data="{
            text: '',
            textArray : ['¡Mejora la interacción con tus clientes!', 'Potencia la forma en que funciona tu trabajo', 'Nos adaptamos a tus necesidades', '¡Contáctanos!'],
            textIndex: 0,
            charIndex: 0,
            typeSpeed: 90,
            cursorSpeed: 400,
            pauseEnd: 1500,
            pauseStart: 100,
            direction: 'forward',
            }"
        x-init="$nextTick(() => {
            let typingInterval = setInterval(startTyping, $data.typeSpeed);
            function startTyping(){
            let current = $data.textArray[ $data.textIndex ];
            // check to see if we hit the end of the string
            if($data.charIndex > current.length){
            $data.direction = 'backward';
            clearInterval(typingInterval);
            setTimeout(function(){
            typingInterval = setInterval(startTyping, $data.typeSpeed);
            }, $data.pauseEnd);
            }
            $data.text = current.substring(0, $data.charIndex);
            if($data.direction == 'forward')
            {
            $data.charIndex += 1;
            }
            else
            {
            if($data.charIndex == 0)
            {
            $data.direction = 'forward';
            clearInterval(typingInterval);
            setTimeout(function(){
            $data.textIndex += 1;
            if($data.textIndex >= $data.textArray.length)
            {
            $data.textIndex = 0;
            }
            typingInterval = setInterval(startTyping, $data.typeSpeed);
            }, $data.pauseStart);
            }
            $data.charIndex -= 1;
            }
            }
            setInterval(function(){
            if($refs.cursor.classList.contains('hidden'))
            {
            $refs.cursor.classList.remove('hidden');
            }
            else
            {
            $refs.cursor.classList.add('hidden');
            }
            }, $data.cursorSpeed);
            }) "	
        class="typing items-start pl-2">
            <div class="relative flex items-start justify-start h-auto">
                <p class="leading-tight" x-text="text"></p>
                <span class="absolute right-0 w-1 -mr-2 bg-white h-3/4" x-ref="cursor"></span>
            </div>
        </div>

        
    </div>

							
							

